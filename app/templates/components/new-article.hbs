{{#if addNewArticle}}
 <div class="container">
   <h1>New Article</h1>
   <form>
     <div class="form-group">
       <label for="author">Author</label>
       {{input value=author id="author"}}
     </div>

     <div class="form-group">
       <label for="genre">Genre</label>
       {{input value=genre id="genre"}}
     </div>

     <div class="form-group">
       <label for="image">Image</label>
       {{input value=image id="image"}}
     </div>

     <div class="form-group">
       <label for="text">Text</label>
       {{input value=text id="text"}}
     </div>

     <div class="form-group">
       <label for="title">Title</label>
       {{input value=title id="title"}}
     </div>

     <button {{action 'save1'}}>Save</button>
   </form>
 </div>
 {{else}}
    <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
