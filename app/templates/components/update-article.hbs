{{#if updateArticleForm}}
  <h4>Update {{article.author}}'s {{article.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author ">Author</label>
          {{input value=author id="author" placeholder=article.author}}
        </div>

        <div class="form-group">
          <label for="genre">Genre</label>
          {{input value=genre id="genre" placeholder=article.genre}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=article.image}}
        </div>

        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text" placeholder=article.text}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=article.title}}
        </div>

        <button {{action 'update' article}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateArticleForm'}}>Update</button>
{{/if}}
